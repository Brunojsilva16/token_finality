<script>
    // Máscara monetária simples para edição
    const valorInput = document.getElementById('valor');
    if(valorInput) {
        valorInput.addEventListener('input', e => {
            let v = e.target.value.replace(/\D/g, '');
            v = (v / 100).toFixed(2) + '';
            v = v.replace(".", ",").replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.");
            e.target.value = v;
        });
    }
</script>